.left_content
  .main_character.clearfix
    = link_to edit_user_registration_path do
      %h1
        = image_tag current_user.image.url(:thumb),class: "user-image-tag"
        = current_user.name
    = link_to timelines_path do
      %i.fa.fa-book{"aria-hidden" => "true"}
    = link_to new_group_path do
      %i.fa.fa-users{"aria-hidden" => "true"}
    = link_to buildings_path do
      %i.fa.fa-building{"aria-hidden" => "true"}
    = link_to root_path do
      %i.fa.fa-home{"aria-hidden" => "true"}
  .group_search.clearfix
    = label :group, "グループを検索してください", class: "group--search__label"
    = search_field :group, :name, class: "group-search-form__input"
    = button_tag type: 'submit', class: "group-search-btn" do
      %i.fa.fa-search{"aria-hidden" => "true"}
  .friend_search.clearfix
    = label :user, "友達を検索してください", class: "friend--search__label"
    = search_field :user, :name, class: "friend-search-form__input"
    = button_tag type: 'submit', class: "friend-search-btn" do
      %i.fa.fa-search{"aria-hidden" => "true"}
  .groups_view
    %span グループ
    - groups.each do |group|
      - if group.status == "Open"
        = link_to group_messages_path(group) do
          .group.clearfix
            %i.fa.fa-comments{"aria-hidden" => "true"}
            %span
              = image_tag group.image.url(:thumb), class: "group-image-tag"
              = group.name
  .friends_view
    %span 友達
    - rooms.each do |room|
      = link_to room_chats_path(room) do
        .friend.clearfix
          %i.fa.fa-comments{"aria-hidden" => "true"}
          %span
            = room.name
