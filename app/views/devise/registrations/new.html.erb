<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><em>(8 characters maximum)</em><br />
    <%= f.text_field :name, autofocus: true, maxlength: "8" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :hobby %><br />
    <%= f.text_area :hobby, autofocus: true, placeholder: "あなたの趣味はなんですか？" %>
  </div>

  <div class="field">
    <%= f.label :place %><br />
    <%= f.text_area :place, autofocus: true, placeholder: "あなたはどこにお住まいですか？" %>
  </div>

  <div class="field">
    <%= f.label :year %><br />
    <%= f.text_field :year, autofocus: true, placeholder: "〇〇年××月△△日生" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
