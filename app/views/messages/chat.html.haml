.content.clearfix
  .left_content
    .main_character.clearfix
      %h1
        = current_user.name
      %i.fa.fa-cog{"aria-hidden" => "true"}
      = link_to new_group_path do
        %i.fa.fa-users{"aria-hidden" => "true"}
      %i.fa.fa-newspaper-o{"aria-hidden" => "true"}
      = link_to root_path do
        %i.fa.fa-home{"aria-hidden" => "true"}
    .group_search.clearfix
      = form_for(@group__search) do |f|
        = f.label :name, "グループを検索してください", class: "group--search__label"
        = f.text_field :name, class: "group-search-form__input"
        = button_tag type: 'submit', class: "group-search-btn" do
          %i.fa.fa-search{"aria-hidden" => "true"}
    .groups_view
      %span グループ
      - @groups.each do |group|
        = link_to group_messages_path(group) do
          .group.clearfix
            %i.fa.fa-comments{"aria-hidden" => "true"}
            %span
              = group.name
    .friends_view
      %span 友達
      - @users.each do |user|
        = link_to chat_user_messages_path(user) do
          .friend.clearfix
            %i.fa.fa-comments{"aria-hidden" => "true"}
            %span
              = user.name
  .right_content
    - @users.each do |user|
      .group_name.clearfix
        %span
          = user.name
        = link_to user_path(user), method: :delete do
          %i.fa.fa-sign-out{"aria-hidden" => "true"}
        = link_to edit_user_path(user) do
          %i.fa.fa-pencil-square-o{"aria-hidden" => "true"}
        = link_to "https://www.google.co.jp" do
          %i.fa.fa-chrome{"aria-hidden" => "true"}
        = link_to "https://www.youtube.com" do
          %i.fa.fa-youtube-play{"aria-hidden" => "true"}
      .chat_view
        - user.messages.each do |message|
          .chat.clearfix
            %span
              = current_user.name
            %p
              = message.created_at.strftime("%Y/%m/%d %H:%M:%S")
            %i.fa.fa-times{"aria-hidden" => "true"}
            %i.fa.fa-pencil-square-o{"aria-hidden" => "true"}
            %h5
              = message.text
      .form_view.clearfix
        = form_for([user, @message]) do |f|
          = f.text_field :text, class: "form-field", placeholder: "テキストを入力してください"
          = f.label :image, class: "image-label" do
            %i.fa.fa-picture-o{"aria-hidden" => "true"}
          = button_tag type: "submit", class: "message-submit-btn" do
            %i.fa.fa-paper-plane{"aria-hidden" => "true"}
